#include <iostream>
#include <vector>
using namespace std;


int main() {

	ios::sync_with_stdio(false);
	cin.tie(NULL);
	cout.tie(NULL);

	int N, M, A;
	cin >> N >> M;
	
	vector<long> C(M, 0);
	vector<long> arr(N, 0);
	cin >> arr[0];

	for (int j = 1; j < N; j++) {
		cin >> A;
		arr[j] = (arr[j - 1] + A);
	}

	long sum = 0;

	for (int i = 0; i < N; i++) {
		int remainder = arr[i] % M;

		if (remainder == 0) {
			sum++;
		}
		C[remainder]++;
	}
	for (int i = 0; i < M; i++) {
		if (C[i] > 1) {
			sum += C[i] * (C[i] - 1) / 2;
		}
	}

	cout << sum << '\n';
	return 0;
}
